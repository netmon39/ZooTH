<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="net.zooth.Information"
    android:background="#0c6947">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="เวลาทำการ / Opening time"
        android:id="@+id/time"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/timetextscv"
        android:layout_below="@+id/time"
        android:layout_alignParentStart="true">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textColor="#ffffff"
        android:text="ราคาบัตร / Ticket price"
        android:id="@+id/ticket"
        android:layout_below="@+id/timetextscv"
        android:layout_alignParentStart="true" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/ticketscv"
        android:layout_below="@+id/ticket"
        android:layout_alignParentStart="true"
        android:fillViewport="false">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tickettext"
            />
    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="อื่นๆ / Others"
        android:id="@+id/other"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:layout_below="@+id/ticketscv"
        android:layout_alignParentStart="true" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/otherscv"
        android:layout_below="@+id/other"
        android:layout_alignParentStart="true" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/othertext"
            />
    </ScrollView>



</RelativeLayout>
