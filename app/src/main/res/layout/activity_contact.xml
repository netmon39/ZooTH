<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="net.zooth.Contact"
    android:background="#0c6947">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ที่อยู่ / Address :"
        android:id="@+id/address"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/addresstext"
        android:layout_below="@+id/address"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textSize="16dp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="โทรศัพท์ / Telephone :"
        android:id="@+id/telephone"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_below="@+id/addresstext"
        android:layout_alignParentStart="true"
        android:layout_marginTop="47dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/telephonetext"
        android:layout_below="@+id/telephone"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff"
        android:textSize="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-mail :"
        android:id="@+id/email"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/telephonetext"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/emailtext"
        android:textColor="#ffffff"
        android:textSize="16dp"
        android:layout_below="@+id/email"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Facebook :"
        android:id="@+id/facebook"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_marginTop="56dp"
        android:layout_below="@+id/emailtext"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/facebooktext"
        android:textColor="#ffffff"
        android:textSize="16dp"
        android:layout_below="@+id/facebook"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Website :"
        android:id="@+id/website"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_marginTop="61dp"
        android:layout_below="@+id/facebooktext"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/websitetext"
        android:textColor="#ffffff"
        android:textSize="16dp"
        android:layout_below="@+id/website"
        android:layout_alignParentStart="true" />


</RelativeLayout>
